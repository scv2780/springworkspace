<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Spring이 관리할 Bean 등록 -->
	<bean class="com.yedam.app.xml.SamsungTV"/>
	<bean id="tv" class="com.yedam.app.xml.LGTV"/>
	
	<!-- DI 설정 -->
	<bean id="chef" class="com.yedam.app.xml.Chef"/>
	<bean class="com.yedam.app.xml.Restaurant">
		<!-- 생성자 인젝션 (권장) -->
		<constructor-arg ref="chef"/>
		<!-- 세터 인젝션 (Bean을 사용하지 않고 생성할 수도 있으니까 위험)-->
		<!-- <property name="chef" ref="chef"/> -->
	</bean>
</beans>